<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="by"
            android:id="@+id/textView5" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_winner" android:layout_below="@+id/textView5" android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp" android:text="winner here" android:textSize="30sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/restart_game_button" android:layout_below="@+id/text_view_winner" android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to menu"
            android:id="@+id/back_to_home_button" android:layout_below="@+id/restart_game_button" android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"/>
</RelativeLayout>